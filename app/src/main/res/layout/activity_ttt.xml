            android:id="@+id/button3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text=""
            android:textSize="36sp" />

        <edu.csi5230.ngoretski.homework4.TttButton
            android:id="@+id/button4"
            android:layout_columnWeight="1"
